#!/usr/bin/env bash

while IFS= read -r line; do
    echo $line
    if [[ $line = "dark" ]] 
    then
        MESA_LOADER_DRIVER_OVERRIDE=radeonsi __EGL_VENDOR_LIBRARY_FILENAMES=/usr/share/glvnd/egl_vendor.d/50_mesa.json kitty --override include="~/.config/kitty/themes/gruvbox_dark_hard.conf" --single-instance
    elif [[ $line = "light" ]] 
    then
        MESA_LOADER_DRIVER_OVERRIDE=radeonsi __EGL_VENDOR_LIBRARY_FILENAMES=/usr/share/glvnd/egl_vendor.d/50_mesa.json kitty --override include="~/.config/kitty/themes/gruvbox_light.conf" --single-instance
    fi 
done < $HOME/.config/theme.yml
