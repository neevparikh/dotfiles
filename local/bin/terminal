#!/usr/bin/env bash

while IFS= read -r line; do
    if [[ $line = "dark" ]] 
    then
        kitty --override include="~/.config/kitty/themes/gruvbox_dark_hard.conf" --single-instance -d $HOME
    elif [[ $line = "light" ]] 
    then
        kitty --override include="~/.config/kitty/themes/gruvbox_light.conf" --single-instance -d $HOME
    fi 
done < $HOME/.config/theme.yaml
