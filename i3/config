# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    # mode hide
    position top 
    status_command i3status # -c ~/.config/i3status/config # -n 10
        tray_output primary
        tray_output DP2
        tray_output DP1
colors {
	background #32302f
	statusline #d5c4a1
	separator #3c3836 
	focused_workspace #32302f #32302f #fabd2f
	active_workspace #32302f #32302f #d5c4a1
	inactive_workspace #3c3836 #3c3836 #d5c4a1
	urgent_workspace   #7c6f64 #fabd2f #3c3836
}
}

